<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="54dp"
        android:layout_marginTop="17dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/description"
        app:layout_constraintEnd_toStartOf="@+id/category"
        app:layout_constraintStart_toEndOf="@+id/image" />

    <TextView
        android:id="@+id/category"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/title"
        android:layout_marginTop="39dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/period" />

    <TextView
        android:id="@+id/discount"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/title"
        android:layout_marginTop="66dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceafter" />

    <TextView
        android:id="@+id/priceafter"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/category"
        android:layout_alignStart="@+id/discount"
        android:layout_marginBottom="-168dp"
        android:text="TextView"
        android:textColor="@android:color/holo_orange_light"
        app:layout_constraintEnd_toEndOf="@+id/discount"
        app:layout_constraintStart_toStartOf="@+id/pricebefore"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="108dp"
        android:layout_height="97dp"
        android:layout_above="@+id/pricebefore"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-122dp"
        android:layout_marginStart="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/title"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/description"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/title"
        android:layout_marginTop="203dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/category"
        app:layout_constraintStart_toStartOf="@+id/category" />

    <TextView
        android:id="@+id/period"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/title"
        android:layout_marginTop="93dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/pricebefore"
        app:layout_constraintEnd_toEndOf="@+id/description"
        app:layout_constraintStart_toStartOf="@+id/category" />

    <TextView
        android:id="@+id/pricebefore"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/title"
        android:layout_marginTop="122dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/priceafter"
        app:layout_constraintEnd_toEndOf="@+id/period"
        app:layout_constraintStart_toStartOf="@+id/period" />

    <TextView
        android:id="@+id/date"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/title"
        android:layout_marginTop="175dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/category"
        app:layout_constraintStart_toStartOf="@+id/discount"
        app:layout_constraintTop_toBottomOf="@+id/discount" />

</RelativeLayout>